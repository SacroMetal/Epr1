<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_bright"
    android:orientation="vertical"
    tools:context="com.example.rlcr.myapplication.Calculadora">


    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ingrese Sus Notas:"
        android:textSize="30sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/Epe1"
            android:layout_width="95dp"
            android:layout_height="44dp"
            android:ems="10"
            android:hint="Epe1"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="-1dp" />

        <EditText
            android:id="@+id/Epr1"
            android:layout_width="382dp"
            android:layout_height="47dp"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Epr1"
            android:inputType="none"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="51dp" />

        <EditText
            android:id="@+id/Epe2"
            android:layout_width="383dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Epe2"
            android:inputType="none"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="-1dp" />

        <EditText
            android:id="@+id/Epr2"
            android:layout_width="383dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Epr2"
            android:inputType="none"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="-1dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/Eva1"
            android:layout_width="383dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Eva1"
            android:inputType="textPersonName"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="-1dp" />

        <EditText
            android:id="@+id/Eva2"
            android:layout_width="383dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Eva2"
            android:inputType="textPersonName"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="-1dp" />

        <EditText
            android:id="@+id/Eva3"
            android:layout_width="383dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Eva3"
            android:inputType="textPersonName"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="-1dp" />

        <EditText
            android:id="@+id/Eva4"
            android:layout_width="382dp"
            android:layout_height="47dp"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Eva4"
            android:inputType="textPersonName"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="51dp" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_resultado"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:background="@android:color/holo_red_light"
        android:onClick="btn_resultado"
        android:text="Sin Examen" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nota de presentación:"
        android:textSize="30sp"
        android:textStyle="bold"
        tools:text="Nota de presentación:" />

    <EditText
        android:id="@+id/et_respuesta"
        android:layout_width="383dp"
        android:layout_height="50dp"
        android:layout_weight="0.00"
        android:ems="10"
        android:hint="respuesta"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="176dp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nota Para aprobar:"
        android:textSize="24sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/et_minimo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Nota para Aprobar"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/Examen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nota Examen"
        android:textSize="24sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/et_examen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Nota examen"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/btn_examen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_green_light"
        android:onClick="btn_examen"
        android:text="Con Examen" />

    <EditText
        android:id="@+id/et_notafinal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Promedio final"
        android:inputType="textPersonName" />

</LinearLayout>
